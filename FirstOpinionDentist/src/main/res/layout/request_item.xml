<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:maxLines="2"
        android:layout_marginTop="9dp"
        android:id="@+id/history_title_text"
        android:textAppearance="@style/ProfileTitle"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_title_text"
        android:layout_alignStart="@+id/history_title_text"
        android:ellipsize="end"
        android:maxLines="5"
        android:id="@+id/history_desc"
        android:textAppearance="@style/TipDesc" />
</RelativeLayout>