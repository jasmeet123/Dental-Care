<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/email_dialog_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/email_title_text"
        android:textAppearance="@style/ProfileTitleValue"
        android:textSize="18sp"
        android:text="@string/email_dialog_title"
        android:textColor="@android:color/holo_blue_dark" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/email_edit"
        android:hint="Email"
        android:layout_below="@+id/email_title_text"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_edit"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="35dp">
        <Button
            android:text="@string/cancel"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_edit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="30dp"
            android:layout_gravity="left"

            android:id="@+id/cancel_button" />

        <Button
            android:text="@string/done"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="30dp"
            android:layout_alignTop="@+id/cancel_button"
            android:id="@+id/done_button" />

    </LinearLayout>
</RelativeLayout>