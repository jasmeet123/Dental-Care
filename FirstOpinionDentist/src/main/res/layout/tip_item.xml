<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/tip_layout">

    <ImageView
        android:layout_width="75dp"
        app:srcCompat="@drawable/button_ok"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp"
        android:id="@+id/tip_item_image"
        android:layout_height="75dp" />

    <TextView
        android:text="Tip Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tip_item_image"
        android:layout_toRightOf="@+id/tip_item_image"
        android:layout_toEndOf="@+id/tip_item_image"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:id="@+id/tip_item_title"
        android:textAppearance="@style/ProfileTitle"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Tip Body comes here..cxjhsbjhkasbcjksanclkasnclkscnksncklsdcncsjcbkjsnckjasnxkasnxkjasnkjasnkjas.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tip_item_desc_short"
        android:layout_below="@+id/tip_item_title"
        android:layout_alignLeft="@+id/tip_item_title"
        android:layout_alignStart="@+id/tip_item_title"
        android:maxLines="3"
        android:textSize="13sp"
        android:typeface="normal" />
</RelativeLayout>